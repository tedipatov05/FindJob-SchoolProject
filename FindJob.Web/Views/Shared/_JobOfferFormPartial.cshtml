@using FindJob.Core.Models.JobOffer;
@model JobOfferFormModel;

<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" style="margin-left: 0px">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.TypeOfJob" class="form-label-add-edit text-white">TypeOfJob</label>
            <input asp-for="@Model.TypeOfJob" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.TypeOfJob" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label-add-edit text-white">Description</label>
            <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.SearchedAbilities" class="form-label-add-edit text-white">Searched Abilities</label>
            <input asp-for="@Model.SearchedAbilities" class="form-control" />
            <span asp-validation-for="@Model.SearchedAbilities" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Salary" class="form-label-add-edit text-white">Price</label>
            <input asp-for="@Model.Salary" class="form-control" aria-required="true" placeholde="Price" />
            <span asp-validation-for="@Model.Salary" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
        </div>
    </form>
</div>