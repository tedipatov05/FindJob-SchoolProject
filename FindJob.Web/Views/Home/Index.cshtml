@using FindJob.Infrastructure.Data.Entities;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager;

<header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">Your Favorite Place for finding a job</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">FindJob can help you find your dream job! Just register and make your life better!</p>
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-primary btn-xl" href="#about">Find Out More</a>
                }
                
            </div>
        </div>
    </div>
</header>

@section Styles{
    <link href="~/css/styles.css" rel="stylesheet" asp-append-version="true"/>
}