@using FindJob.Core.Models.Programmer;

@model List<ProgrammerViewModel>;

<h2 class="text-center text-dark">All Users</h2>
<div class="container profile-page">
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-xl-6 col-lg-7 col-md-12">
                <div class="card profile-header">
                    <div class="body">
                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="profile-image float-md-right">
                                    <img src="@user.ProfilePicture" alt="">
                                    

                                </div>

                            </div>
                            <div class="col-lg-8 col-md-8 col-12">
                                <h4 class="m-t-0 m-b-0">@user.Name</h4>
                                <span class="job_post">@user.Email</span>
                                <p>@user.Abilities</p>
                                <p>@user.GraduationSchool</p>
                                <div>
                                    <a asp-action="Accept" asp-controller="Company" asp-route-id="@user.Id" asp-route-offerId="@user.OfferId"  class="btn btn-primary btn-round">Accept</a>
                                    <a asp-action="Reject" asp-controller="Company" asp-route-id="@user.Id" asp-route-offerId="@user.OfferId" class="btn btn-danger btn-round btn-simple">Delete</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>

</div>

@section Styles{
    <link rel="stylesheet" href="~/css/allUsers.css" asp-append-version="true"/>
}
